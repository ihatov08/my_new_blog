<h1>ブログ投稿一覧</h1>
<table class="table table-striped">
  <thead>
    <th>タイトル</th>
    <th>カテゴリ</th>
    <th>本文</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.category %></td>
        <td><%= post.body %></td>
        <td><%= link_to '詳細', post, class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
