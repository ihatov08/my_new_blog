<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <!-- <div class="form-group">
        <%= f.label :description %><br />
        <%= f.text_field :description, autofocus: true, class: "form-control" %>
      </div> -->

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <!-- <div class="form-group">
        <%= f.label :image_url %><br />
        <%= f.text_field :image_url, autofocus: true, class: "form-control" %>
      </div> -->

      <div class="form-group">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> ログイン情報を記録する
          </label>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "ログイン", class: 'btn btn-default' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


